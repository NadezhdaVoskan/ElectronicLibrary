                                    <Button  Foreground="White" x:Name="DeleteAccount" Width="200"  Grid.Column="1" Grid.Row="12" HorizontalAlignment="Center" Margin="10,5,20,0" Content="Удалить аккаунт" Click="DeleteAccount_Click"></Button>

                                </Grid>
                            </StackPanel>
                        </Border>
